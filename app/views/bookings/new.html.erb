<%= simple_form_for ([@flat, @booking]) do |f| %>
  <%= f.input :number_of_guests %>
  <%= f.input :date_check_in, as: :date, start_year: Date.today.year + 2,
                              end_year: Date.today.year,
                              order: [:day, :month, :year] %>
  <%= f.input :date_check_out, as: :date, start_year: Date.today.year + 2,
                              end_year: Date.today.year,
                              order: [:day, :month, :year] %>
  <%= f.button :submit %>
<% end %>
